{
   "compilerOptions": {
      "lib": [
         "dom",
         "es2019",
         "es2020.promise",
         "es2020.bigint",
         "es2020.string"
      ],
      "module": "esnext",
      "target": "es2019",
      "strict": true,
      "allowJs": false,
      "esModuleInterop": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "shell-src/**/*.ts"
   ]
}