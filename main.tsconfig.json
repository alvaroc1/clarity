{
   "compilerOptions": {
      "lib": [
         "dom"
      ],
      "module": "esnext",
      "target": "es2022",
      "strict": true,
      "allowJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "main-src/**/*.ts"
   ]
}